<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:background="#555151"


        >
        <LinearLayout
            android:id="@+id/dateLine"
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:background="@color/black"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/data"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="3dp"
                android:text="Wed"
                android:textColor="@android:color/white"
                android:textSize="18dp"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:id="@+id/description"
            android:layout_width="150dp"
            android:layout_height="20dp"
            android:layout_below="@+id/dateLine"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="3dp"
            android:gravity="center_vertical"
            android:text="Clear Sky"
            android:textColor="@color/white"
            android:textSize="15dp"
            />


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="45dp"
            android:layout_height="52dp"
            android:layout_below="@+id/dateLine"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp" />

        <TextView
            android:id="@+id/wind"
            android:layout_width="150dp"
            android:layout_height="20dp"
            android:layout_below="@+id/description"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="3dp"
            android:gravity="center_vertical"
            android:text="Wind"
            android:textColor="@color/white"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/pressure"
            android:layout_width="150dp"
            android:layout_height="20dp"
            android:layout_marginLeft="5dp"
            android:textSize="15dp"
            android:text="Pressure"
            android:textColor="@color/white"
            android:layout_below="@+id/wind"
            android:gravity="center_vertical"
            />


        <TextView
            android:id="@+id/humadity"
            android:layout_width="150dp"
            android:layout_height="20dp"
            android:layout_marginLeft="5dp"
            android:textSize="15dp"
            android:text="Humadity"
            android:textColor="@color/white"
            android:layout_below="@+id/pressure"
            android:gravity="center_vertical"
            />

        <TextView
            android:id="@+id/temperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="19dp"
            android:layout_alignBottom="@+id/humadity"
            android:gravity="center_vertical|right"
            android:text="30C"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_below="@id/imageView"
            android:layout_marginRight="5dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:gravity="center_vertical"
            android:layout_below="@id/temperature"
            android:orientation="horizontal"
            android:layout_alignRight="@+id/temperature"
            >
            <ImageView
                android:layout_width="8dp"

                android:layout_height="15dp"
                android:layout_marginTop="8dp"
                />
            <TextView
                android:id="@+id/tmpx"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="20c"
                android:textColor="@color/white"
                android:textSize="14dp"
                android:textStyle="italic"
                android:layout_marginRight="8dp"
                android:gravity="center_vertical"
                />
            <ImageView
                android:layout_width="8dp"

                android:layout_height="15dp"
                android:layout_marginTop="8dp"
                />
            <TextView
                android:id="@+id/tmin"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="20c"
                android:textColor="@color/white"
                android:textSize="14dp"
                android:textStyle="italic"
                android:layout_marginRight="8dp"
                android:gravity="center_vertical"
                />
        </LinearLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>